mixin header(login)
    
    header(class="header-wrapper")
        div(class="header-content")
            div(class="header__logo-container")
                a(href="index.html")
                    +logo
            input(class="menu-button-input" type="checkbox" id="menu-checkbox")
            label(class="menu-button-open" for="menu-checkbox")
            
                
            menu(class="menu")
                li(class="menu__item") 
                    a(href="#") О нас
                li(class="menu__item menu__item_dropdown") 
                    a(href="#") Услуги
                    ul(class="menu-dropdown-list")
                        li(class="menu-dropdown-list__item")
                            a(href="#") Услуга 1
                        li(class="menu-dropdown-list__item")
                            a(href="#") Услуга 2
                li(class="menu__item") 
                    a(href="#") Вакансии
                li(class="menu__item") 
                    a(href="#") Новости
                li(class="menu__item menu__item_dropdown") 
                    a(href="#") Соглашения
                    ul(class="menu-dropdown-list")
                        li(class="menu-dropdown-list__item")
                            a(href="#") Соглашение 1
                        li(class="menu-dropdown-list__item")
                            a(href="#") Соглашение 2
                if (login)
                    li(class="menu__item menu__login")
                        a(href="#")= login
                else
                    li.menu-buttons-wrapper
                        .menu__button_login
                                +button({title: "Войти", type: "border", size: "87_34"})
                        .menu__button_register
                                +button({title: "Зарегистрироваться", type: "background", size: "196_34"})