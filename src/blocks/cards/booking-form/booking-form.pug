mixin booking-form
    div(class="booking-form")
        div(class="booking-form__rooms-number booking-form__rooms-number_de-luxe") 888
        div(class="booking-form__rent-price") 9 990#{'\u20bd'}
        div(class="booking-form-date")
            +dropdown-date({
                title: "Прибытие",
                placeholder: "ДД.ММ.ГГГГ",
                classInput: 'arrival-date',
                value: '19.08.2019',
                })
            +dropdown-date({
                title: "Выезд",
                placeholder: "ДД.ММ.ГГГГ",
                classInput: 'departure-date',
                value: '23.08.2019'
            })
        div(class="booking-form-guests")
            +dropdown({
                title: 'Гости',
                placeholder: '',
                classModifier: 'dropdown_size_wide',
                classTypeDropdown: 'dropdown-guests',
                value: '3 гостя',
            })
        div(class="calculation")
            .calculation-cost-of-living.calculation-item
                span(class="calculation-item__title") 9 900 x 4 суток
                span(class="calculation-item__amount") 39 960 
            .calculation-cost-of-service.calculation-item
                span(class="calculation-item__title") Сбор за услуги: скидка 2 179
                span(class="calculation-item__amount") 0
            .calculation-cost-of-additional-services.calculation-item
                span(class="calculation-item__title") Сбор за дополнительные услуги
                span(class="calculation-item__amount") 300
        div(class="booking-form-total")
            span(class="booking-form-total__text") Итого
            div(class="booking-form-total__line")
            span(class="booking-form-total__amount") 38 081
        div(class="booking-form-button")
            +button({
                title: "Забронировать",
                type: "wide"
            })
        .booking-form-calendar
        +calendar
        







            
